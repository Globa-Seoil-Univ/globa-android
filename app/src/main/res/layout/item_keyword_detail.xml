<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_keyword_detail_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        tools:text="1."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview_keyword_detail_item_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        tools:text="단어"
        app:layout_constraintStart_toEndOf="@+id/textview_keyword_detail_number"
        app:layout_constraintTop_toTopOf="@+id/textview_keyword_detail_number"
        app:layout_constraintBottom_toBottomOf="@+id/textview_keyword_detail_number"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/textview_keyword_detail_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_label_keyword"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/small"
        tools:text="명사"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_keyword_detail_item_word" />

    <TextView
        android:id="@+id/textview_keyword_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="5dp"
        tools:text="선을 봄."
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_keyword_detail_number" />

</androidx.constraintlayout.widget.ConstraintLayout>