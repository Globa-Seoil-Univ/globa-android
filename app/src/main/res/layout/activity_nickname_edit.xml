<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.profile.edit.NicknameEditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_nicknameedit_header"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_nicknameedit_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/header_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_nicknameedit_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/gray"
            android:textSize="@dimen/large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_nicknameedit_announce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 이름을 입력해주세요."
        android:textSize="@dimen/big"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_nicknameedit_header"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/edittext_nicknameedit_inputname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="윤영진"
        android:textSize="@dimen/large"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/black"
        android:backgroundTint="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_nicknameedit_announce"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_nickname_edit_cancel"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/cancel"
        android:backgroundTint="@color/gray"
        app:layout_constraintTop_toTopOf="@+id/edittext_nicknameedit_inputname"
        app:layout_constraintEnd_toEndOf="@+id/edittext_nicknameedit_inputname"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp" />

    <TextView
        android:id="@+id/textview_nicknameedit_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/32"
        android:fontFamily="@font/notosans_regular"
        android:textSize="@dimen/small"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/edittext_nicknameedit_inputname"
        app:layout_constraintTop_toBottomOf="@+id/edittext_nicknameedit_inputname"
        android:layout_marginRight="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>