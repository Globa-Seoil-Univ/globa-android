<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout_document_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/document_background"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearlayout_document_icon_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/document_icon_background"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_document_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/document" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_document_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="문서를 찾을 수 없습니다."
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textview_document_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2024-03-12 오후 11:07"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/darkGray"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/textview_document_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_document_title" />


</androidx.constraintlayout.widget.ConstraintLayout>