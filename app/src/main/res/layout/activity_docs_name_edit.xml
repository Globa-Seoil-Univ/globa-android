<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_docs_name_header"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_docs_name_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/header_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_docs_name_change_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change"
            android:fontFamily="@font/notosans_regular"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_docs_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_docs_name_edit_title"
        android:textSize="22sp"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_docs_name_header"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/edittext_docs_name_inputname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_docs_name_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_docs_name_cancel"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/cancel"
        android:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="@id/edittext_docs_name_inputname"
        app:layout_constraintTop_toTopOf="@+id/edittext_docs_name_inputname"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_docs_name_inputname"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/textview_docs_name_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_regular"
        android:textSize="13sp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@id/edittext_docs_name_inputname"
        app:layout_constraintTop_toBottomOf="@+id/edittext_docs_name_inputname"
        android:layout_marginEnd="10dp"
        tools:text="3/32" />

</androidx.constraintlayout.widget.ConstraintLayout>