<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout_folderadd_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_folderadd_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_folderadd_minusbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageview_folderadd_profile"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_folderadd_profile" >

        <View
            android:id="@+id/view_folderadd_redcircle"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/redcircle_folderadd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/view_folderadd_minus"
            android:layout_width="7dp"
            android:layout_height="3dp"
            android:background="@drawable/minus_folderadd"
            app:layout_constraintStart_toStartOf="@+id/view_folderadd_redcircle"
            app:layout_constraintEnd_toEndOf="@+id/view_folderadd_redcircle"
            app:layout_constraintTop_toTopOf="@+id/view_folderadd_redcircle"
            app:layout_constraintBottom_toBottomOf="@+id/view_folderadd_redcircle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>