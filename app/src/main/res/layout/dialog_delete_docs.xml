<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modal_background">

    <RelativeLayout
        android:id="@+id/relativelayout_delete_docs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_delete_docs_tab"
            android:layout_width="44dp"
            android:layout_height="8dp"
            android:background="@drawable/alert_tab"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textview_delete_docs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/delete_confirmation_message"
            android:textColor="@color/black"
            android:textSize="@dimen/normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_delete_docs_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGray"
            android:layout_below="@+id/textview_delete_docs_title"
            android:layout_marginTop="5dp"
            android:text="@string/main_delete_docs_modal_description"
            android:textSize="@dimen/small"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/constraintlayout_delete_docs_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:columnCount="3"
        android:rowCount="1"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout_delete_docs">

        <TextView
            android:id="@+id/textview_delete_docs_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/darkGray"
            android:layout_weight="9"
            android:text="@string/cancel" />

        <LinearLayout
            android:id="@+id/linearlayout_delete_docs_split"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/gray"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textview_delete_docs_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_weight="9"
            android:text="@string/delete" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>