<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintlayout_item_folder_permission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativelayout_folder_permission_tab"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imagebutton_folder_permission_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/textview_folder_permission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/folder_permission_title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_folder_permission_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_permission_confirm"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="@dimen/normal"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_folder_permission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout_folder_permission_tab"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>